@page
@model BankProject.Pages.Admin.ManageUsersModel
@{
}
<link rel="stylesheet" href="/css/styles.css" />
<div class="container p-3">
	<div class="row">
        <div class="col">
			<h1>Manage Users</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">User Email</th>
						<ul>
							@foreach (var user in Model.Users)
							{
								<li>@user.Email - <a asp-page="./EditUser" asp-route-id="@user.Id">Edit</a></li>
							}
						</ul>
					</tr>
				</thead>
			</table>

        </div>
    </div>
</div>

